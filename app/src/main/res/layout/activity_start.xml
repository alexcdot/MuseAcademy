<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.choosemuse.example.libmuse.StartActivity"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="0.02"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="26sp"
            android:textColor="?android:attr/colorFocusedHighlight"
            android:textStyle="normal|bold"
            android:text="Start your learning experience here"
            android:textAlignment="center"
            android:gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:id="@+id/videoSearch"
            android:layout_weight="0.03" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Submit"
            android:textColor="#6cccc3"
            android:id="@+id/searchButton"
            android:layout_weight="0.06"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_weight="0.04"
            android:weightSum="1">

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:text="Popular searches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textSize="18sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:text="Astronomy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textAppearance="@android:style/TextAppearance"
                android:textAlignment="center"
                android:lineSpacingExtra="8sp"
                android:gravity="center"/>

            <TextView
                android:text="Humanism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textAppearance="@android:style/TextAppearance"
                android:textAlignment="center"
                android:gravity="center"
                android:lineSpacingExtra="8sp" />

            <TextView
                android:text="Organic Chemistry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAppearance="@android:style/TextAppearance"
                android:lineSpacingExtra="8sp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
                android:text="Emulators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAppearance="@android:style/TextAppearance"
                android:textAlignment="center"
                android:gravity="center"
                android:lineSpacingExtra="8sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
