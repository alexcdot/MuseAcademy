<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="FireMaterial">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:colorAccent">@color/accent_material_dark</item>
        <item name="android:textColorPrimary">@color/accent_material_dark</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FireMaterial" parent="android:Theme.Material.NoActionBar" >
        <item name="android:colorAccent">@color/accent_fire_material</item>
        <item name="android:textColorPrimary">@color/accent_fire_material</item>
        <item name="android:textColorSecondary">@android:color/holo_orange_dark</item>
    </style>

</resources>
